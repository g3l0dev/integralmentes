---
import Cta from "@components/cta.astro";
---

<section class="section">
  <div class="section-banner"></div>
  <div class="container">
    <p class="section-paragraph">
      Lorem ipsum dolor sit, amet consectetur adipisicing elit. Laborum sint non
      corporis asperiores laudantium saepe, ipsam perspiciatis incidunt voluptas
      officiis.
    </p>
    <Cta
      class="self-center xl:self-start"
      url="#"
      body="Â¡Agenda una cita conmigo!"
    />
  </div>
</section>

<style lang="scss">
  .section {
    padding: 1.25rem 1rem;
    height: 65vh;
    display: flex;
    flex-flow: column;
    justify-content: flex-end;
    position: relative;
    background: linear-gradient(
      to top,
      rgba(24, 24, 24, 0.5) 20%,
      transparent 40%
    );
    @media (768px <= width <= 884px) {
      padding: 2rem 1.25rem;
    }
    @media (1024px <= width <= 2560px) {
      padding: 2rem 20%;
      height: 75vh;
    }
    &-paragraph {
      margin-bottom: 1.25rem;
      font-size: 1.125em;
      text-wrap: pretty;
      color: #fafbfc;
    }
    &-banner {
      width: 100%;
      height: 100%;
      background-image: url("/img/acerca-de-mi-banner.webp");
      background-position: center center;
      background-repeat: no-repeat;
      background-size: cover;
      position: absolute;
      top: 0;
      left: 0;
      z-index: -10;
      @media (1024px <= width <= 2560px) {
        background-position: 100% 40%;
      }
    }
    .container {
      display: flex;
      flex-flow: column;
    }
  }
</style>
